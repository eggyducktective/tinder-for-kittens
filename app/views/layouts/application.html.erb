<!DOCTYPE html>
<html>
  <head>
    <title>Kitty Dating</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>

    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body>
    <div class="header">
      <div id="nav">
        <% if @current_user.present? %>
          Welcome, <%= @current_user.username %>
          <%= link_to 'Logout', login_path, method: :delete %>
          |
          <%= link_to 'All Kitties', cats_path %>
          |
          <%= link_to 'Register A New Kitty', new_cat_path %>

        <% else %>

          <%= link_to 'Login', login_path %>
          |
          <%= link_to 'Sign Up', new_user_path %>
        <% end %>
     </div>
       <h4 id="logo">❤️ Kitty Dating ❤️ </h4>
   </div>

    <div id="search">
      <%= form_tag '/search' do %>
        <%= search_field_tag :search %>

        <div id="button"><%= submit_tag 'Search Now' %></div>
      <% end %>
    </div>
    <div class="main">


    <%= yield %>
</div>
<br>
<br>

    <div class="footer">
      <div class="social">
        <%= link_to "Twitter", "https://twitter.com/eggyducktective" %> |
        <%= link_to "Github", "https://github.com/eggyducktective" %> |
        <%= link_to "Linkedin", "https://www.linkedin.com/in/anna-tran-615036125" %>
      </div>
      <div class="copyright">&copy; Anna Tran. Project 1. WDI 27</div>
    </div>

  </body>
</html>
